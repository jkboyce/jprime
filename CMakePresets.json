{
	"version": 3,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 21,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "windows-base",
			"hidden": true,
			"generator": "Visual Studio 17 2022",
			"binaryDir": "${sourceDir}/build/${presetName}",
			"cacheVariables": {
				"CMAKE_CXX_STANDARD": "20",
				"CMAKE_CXX_STANDARD_REQUIRED": "ON"
			},
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
		},
		{
			"name": "macos-base",
			"hidden": true,
			"generator": "Unix Makefiles",
			"binaryDir": "${sourceDir}/build/${presetName}",
			"cacheVariables": {
				"CMAKE_CXX_STANDARD": "20",
				"CMAKE_CXX_STANDARD_REQUIRED": "ON"
			},
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Darwin"
			}
		},
		{
			"name": "win-cpu-release",
			"displayName": "Windows CPU Release",
			"inherits": "windows-base",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"JPRIME_ENABLE_CUDA": "OFF"
			}
		},
		{
			"name": "win-cpu-debug",
			"displayName": "Windows CPU Debug",
			"inherits": "windows-base",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug",
				"JPRIME_ENABLE_CUDA": "OFF"
			}
		},
		{
			"name": "win-cuda-release",
			"displayName": "Windows CUDA Release",
			"inherits": "windows-base",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"JPRIME_ENABLE_CUDA": "ON"
			}
		},
		{
			"name": "win-cuda-debug",
			"displayName": "Windows CUDA Debug",
			"inherits": "windows-base",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug",
				"JPRIME_ENABLE_CUDA": "ON"
			}
		},
		{
			"name": "macos-cpu-release",
			"displayName": "macOS CPU Release",
			"inherits": "macos-base",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"JPRIME_ENABLE_CUDA": "OFF"
			}
		},
		{
			"name": "macos-cpu-debug",
			"displayName": "macOS CPU Debug",
			"inherits": "macos-base",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug",
				"JPRIME_ENABLE_CUDA": "OFF"
			}
		}
	],
	"buildPresets": [
		{
			"name": "win-cpu-release",
			"configurePreset": "win-cpu-release",
			"configuration": "Release"
		},
		{
			"name": "win-cpu-debug",
			"configurePreset": "win-cpu-debug",
			"configuration": "Debug"
		},
		{
			"name": "win-cuda-release",
			"configurePreset": "win-cuda-release",
			"configuration": "Release"
		},
		{
			"name": "win-cuda-debug",
			"configurePreset": "win-cuda-debug",
			"configuration": "Debug"
		},
		{
			"name": "macos-cpu-release",
			"configurePreset": "macos-cpu-release",
			"configuration": "Release"
		},
		{
			"name": "macos-cpu-debug",
			"configurePreset": "macos-cpu-debug",
			"configuration": "Debug"
		}
	]
}
